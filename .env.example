# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/edgemind?schema=public"

# Auth
# Gere um secret com pelo menos 32 chars (ex: openssl rand -base64 48)
AUTH_SECRET="CHANGE_ME_CHANGE_ME_CHANGE_ME_CHANGE_ME_32CHARS_MIN"
AUTH_TOKEN_PEPPER="CHANGE_ME_PEPPER_16CHARS_MIN"

# App
APP_URL="http://localhost:3000"

# Bootstrap de admin (opcional)
# Defina o email que deve ser promovido automaticamente para role=ADMIN no primeiro login.
# ADMIN_EMAIL="seu-email@exemplo.com"

# Se o SMTP estiver fora e você precisar destravar a área admin, defina um token longo e aleatório.
# Acesse: /api/auth/bootstrap?token=SEU_TOKEN
# ADMIN_BOOTSTRAP_TOKEN="CHANGE_ME_LONG_RANDOM_TOKEN"

# Email (opcional; sem SMTP o link aparece no console)
# SMTP_HOST=""
# SMTP_PORT=587
# SMTP_USER=""
# SMTP_PASS=""
# SMTP_FROM="no-reply@exemplo.com"

# Groq (opcional)
# GROQ_API_KEY=""

# Billing (opcional)
# Webhook token simples para /api/billing/webhook (evita spam). Configure na Vercel.
# BILLING_WEBHOOK_TOKEN="CHANGE_ME_WEBHOOK_TOKEN"
