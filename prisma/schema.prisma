generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

enum Plan {
  FREE
  PRO
  ELITE
}

enum Role {
  USER
  ADMIN
}

enum AuthTokenType {
  MAGIC_LINK
  PASSWORD_RESET
}

enum SignalIntent {
  LOW
  MEDIUM
  HIGH
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  plan      Plan     @default(FREE)
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Authentication fields
  passwordHash     String?  // bcrypt/argon2 hash; nullable for magic-link-only users
  emailVerified    Boolean  @default(false)
  twoFactorSecret  String?  // base32 secret for TOTP (store encrypted via AppSecret in production)
  twoFactorEnabled Boolean  @default(false)

  authTokens   AuthToken[]
  sessions     Session[]
  accessLogs   AccessLog[]
  signals      Signal[]
  usageDays    UsageDay[]
  badgeUnlocks BadgeUnlock[]

  executionPlans ExecutionPlan[]
  weeklyBriefs   WeeklyBrief[]
}

model AuthToken {
  id         String        @id @default(cuid())
  type       AuthTokenType @default(MAGIC_LINK)
  identifier String // email
  tokenHash  String
  expiresAt  DateTime
  consumedAt DateTime?
  createdAt  DateTime      @default(now())
  ip         String?
  userAgent  String?
  userId     String?
  user       User?         @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([identifier])
  @@index([expiresAt])
}

model Session {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
  expiresAt DateTime
  revokedAt DateTime?
  ip        String?
  userAgent String?

  @@index([userId])
  @@index([expiresAt])
}

model AccessLog {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  createdAt DateTime @default(now())
  path      String
  method    String
  ip        String?
  userAgent String?
  status    Int?

  @@index([userId])
  @@index([createdAt])
}

model Signal {
  id         String       @id @default(cuid())
  userId     String
  user       User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt  DateTime     @default(now())
  source     String
  title      String
  summary    String
  intent     SignalIntent
  score      Int
  growthPct  Int
  raw        Json?
  delayUntil DateTime?

  insights Insight[]
  executionPlans ExecutionPlan[]

  @@index([userId, createdAt])
  @@index([score])
}

model ExecutionPlan {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  signalId  String
  signal    Signal   @relation(fields: [signalId], references: [id], onDelete: Cascade)

  hypothesis String
  experiment String
  metric     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, signalId])
  @@index([userId])
  @@index([signalId])
}

model WeeklyBrief {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  weekStart DateTime
  content   Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, weekStart])
  @@index([userId])
  @@index([weekStart])
}

model Insight {
  id         String   @id @default(cuid())
  signalId   String
  signal     Signal   @relation(fields: [signalId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  strategic  String
  actionable String
  confidence Int
  model      String?

  @@index([signalId])
}

model UsageDay {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  day         DateTime
  signalsSeen Int      @default(0)
  insightsUsed Int     @default(0)
  points      Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, day])
  @@index([day])
}

model BadgeUnlock {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  key       String
  createdAt DateTime @default(now())

  @@unique([userId, key])
}

model AppSecret {
  key       String   @id
  valueEnc  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Compliance / Auditoria (LGPD/GDPR)
// Estas tabelas não alteram schema de produto; servem para prova, auditoria e governança mínima.
model LegalAcceptance {
  id                       String   @id @default(cuid())
  acceptanceId             String?
  userId                   String?
  email                    String?
  legalVersion             String
  acceptedAt               DateTime
  termsAccepted            Boolean
  privacyAccepted          Boolean
  essentialCookiesAccepted Boolean
  metricsConsent           Boolean
  personalizationConsent   Boolean
  ip                       String?
  userAgent                String?
  source                   String
  createdAt                DateTime @default(now())

  @@index([userId])
  @@index([email])
  @@index([acceptanceId])
  @@index([legalVersion])
  @@index([acceptedAt])
}

model ConsentEvent {
  id             String   @id @default(cuid())
  acceptanceId   String?
  userId         String?
  email          String?
  legalVersion   String
  metrics        Boolean
  personalization Boolean
  ip             String?
  userAgent      String?
  source         String
  createdAt      DateTime @default(now())

  @@index([userId])
  @@index([email])
  @@index([acceptanceId])
  @@index([legalVersion])
  @@index([createdAt])
}
